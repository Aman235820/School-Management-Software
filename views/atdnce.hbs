<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>List of Students</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <style type="text/css">
    
    	.box{
    		width: 90%;
    		height: 200px;
    		
    		margin:5%;
    		align-content: center;
    	
    	}
    </style>
  
</head>
<body>

	<h2 align="center">Attendance for : <span id="dt" style="color: red"></span></h2><br><br>
	{{#each stds}}  

	<form  method="post" action="/attendance/{{_id}}">

	<div class="box" align="center">
		<input type="hidden" name="name" value="{{firstName}} {{lastName}}">
		<input type="hidden" name="id" value="{{_id}}">
			<input type="hidden" name="dates" id="dateinp{{_id}}">
	<table border="1" cellpadding="10px" align="center">
		<tr>
			<th><img src="{{image}}" width="100px" height="100px"></th>
			<th colspan="3" style="font-size: 2em;">{{firstName}} {{lastName}}</th>
		</tr>
		<tr>
			<th>PHYSICS ATTENDANCE </th>
			<th>CHEMISTRY  ATTENDANCE</th>
			<th>MATHEMATICS  ATTENDANCE</th>
		</tr>
		<tr>
			<td><a id="pp{{_id}}" class="btn btn-success" style="font-size: 2em; margin: 5px;">+</a><input type="text" name="ph" id="ph{{_id}}" style="border-style:none; font-size: 20px; padding: 5px; width: 35%; text-align: center; font-weight: bold;"><a id="pm{{_id}}" class="btn btn-danger" style="font-size: 2em;margin: 5px;">-</a></td>


			<td><a id="cp{{_id}}" class="btn btn-success" style="font-size: 2em;margin: 5px;">+</a> <input type="text" name="ch" id="ch{{_id}}" style="border-style:none; font-size: 20px; padding: 5px; width: 35%; text-align: center; font-weight: bold;"><a id="cm{{_id}}" class="btn btn-danger" style="font-size: 2em;margin: 5px;">-</a></td>


			<td><a id="mp{{_id}}" class="btn btn-success" style="font-size: 2em;margin: 5px;">+</a> <input type="text" name="mt" id="mt{{_id}}" style="border-style:none; font-size: 20px; padding: 5px; width: 35%; text-align: center; font-weight: bold;"><a id="mm{{_id}}" class="btn btn-danger" style="font-size: 2em;margin: 5px;">-</a></td>

		</tr>
		<tr>
			<td colspan="3"><button>Submit</button><br></td>
		</tr>

	</table><br><br><br><br><br>
</div>
<br><br><br><br><br>
</form>
<br><br><br><br><br>
<script type="text/javascript">
$(document).ready(function(){


		$("#pp{{_id}}").click(function(){
			var val=document.getElementById("ph{{_id}}").value;
			var p= Number(val)+1;
			if(p<0){
				p=0;
			}
			if(p>50){
				p=50;
			}
			document.getElementById("ph{{_id}}").value=p;
			document.getElementById("phy{{_id}}").innerHTML=p;

		});

		$("#pm{{_id}}").click(function(){
			var valp=document.getElementById("ph{{_id}}").value;
			var p= Number(valp)-1;
			if(p<0){
				p=0;
			}
			if(p>50){
				p=50;
			}
			document.getElementById("ph{{_id}}").value=p;
			document.getElementById("phy{{_id}}").innerHTML=p;
		});


		$("#cp{{_id}}").click(function(){
			var valc=document.getElementById("ch{{_id}}").value;
			var c= Number(valc)+1;
			if(c<0){
				c=0;
			}
			if(c>50){
				c=50;
			}
			document.getElementById("ch{{_id}}").value=c;
			document.getElementById("chem{{_id}}").innerHTML=c;
		});

		$("#cm{{_id}}").click(function(){
			var valc=document.getElementById("ch{{_id}}").value;
			var c= Number(valc)-1;
			if(c<0){
				c=0;
			}
			if(c>50){
				c=50;
			}
			document.getElementById("ch{{_id}}").value=c;
			document.getElementById("chem{{_id}}").innerHTML=c;
		});


		$("#mp{{_id}}").click(function(){
			var valm=document.getElementById("mt{{_id}}").value;
			var m= Number(valm)+1;
			if(m<0){
				m=0;
			}
			if(m>50){
				m=50;
			}
			document.getElementById("mt{{_id}}").value=m;
			document.getElementById("maths{{_id}}").innerHTML=m;
		});

		$("#mm{{_id}}").click(function(){
			var valm=document.getElementById("mt{{_id}}").value;
			var m= Number(valm)-1;
			if(m<0){
				m=0;
			}
			if(m>50){
				m=50;
			}
			document.getElementById("mt{{_id}}").value=m;
			document.getElementById("maths{{_id}}").innerHTML=m;
		});

});


    var d=new Date();
	var date=d.toLocaleDateString();
	document.getElementById('dt').innerHTML=date;

	document.getElementById('dateinp{{_id}}').value=date;
	


	


</script>
{{/each}}


{{#each atds}}
<script type="text/javascript">
	 document.getElementById("ph{{Identity}}").value='{{Physics}}';
	 document.getElementById("ch{{Identity}}").value='{{Chemistry}}';
	 document.getElementById("mt{{Identity}}").value='{{Mathematics}}';
</script>
{{/each}}

</body>
</html>
